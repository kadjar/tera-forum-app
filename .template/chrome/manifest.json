{
	"name": "TERA Forum Viewer",
	"version": "0.1",
	"description": "This app replaces the TERA forums CSS with custom CSS (built on Forge)",
	"permissions": ["tabs", "http://tera-forums.enmasse.com/*", "https://tera-forums.enmasse.com/*"],
	"background_page": "forge.html",
	"content_scripts": [
		{
			"matches": ["http://tera-forums.enmasse.com/*", "https://tera-forums.enmasse.com/*"]
			, "js": ["forge/all.js", "src/js/every-page.js"]
			, "css": ["src/css/default.css"]
			, "run_at": "document_start"
			, "all_frames": true

		}
	],
	"browser_action": {"default_popup": "src/index.html", "default_icon": "src/img/logo-forge.png", "default_title": "An example browser toolbar icon"}
}
